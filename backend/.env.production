# Environment Configuration
NODE_ENV=production
PORT=5000

# Database Configuration (Update these with production database details)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your-production-password
DB_NAME=ai_stock_management
DB_PORT=3306

# JWT Configuration
JWT_SECRET=your-super-secret-production-jwt-key-here-make-it-long-and-complex
JWT_EXPIRES_IN=7d

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# CORS Configuration - Allow production domains
CORS_ORIGIN=https://hackathon.artechnology.pro,https://api.artechnology.pro

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
